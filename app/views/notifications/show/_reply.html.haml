%td
  %span.glyphicon.glyphicon-comment{ class: "#{notification.read? ? 'text-muted' : 'text-primary'}" }

%td.nowrap{ class: "#{'text-muted' if notification.read?}" }
  .overflow-hidden
    = link_to notification, class: "#{notification.read? ? 'link-muted' : 'link-unstyled' }", data: { turbolinks: false } do
      = strip_tags(simple_markdown notification.reply.description).html_safe

%td.hidden-xs
  = image_tag user_photo_url(notification.reply.user), size: '18x18', alt: ''
