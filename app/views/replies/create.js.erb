$("#comment_container_<%= @reply.parent_comment_id %>_new").before("<%=j render 'replies/show', reply: @reply, level: @reply.computed_level, include_chapter_title: false %>");
<% else %>
$("#comment_container_<%= @reply.parent_comment_id %>_new").after("<%=j render 'replies/show', reply: @reply, level: @reply.computed_level, include_chapter_title: false %>");
<% end %>
