= form_for @image, html: { class: 'form-horizontal' } do |f|
  - if @image.errors.any?
    .callout.callout-danger
      %strong
        = pluralize @image.errors.count, 'error'
        prohibited this image from being saved

      %ul
        - @image.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :image, 'Image (JPG, GIF, PNG)', class: 'col-md-2 control-label'
    .col-md-10
      = f.file_field :image, class: 'form-control'
      = f.hidden_field :image_cache

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, class: 'btn btn-primary'
      = link_to 'Cancel', (current_user.admin? ? (@image.new_record? ? images_path : @image) : root_path), class: 'btn btn-default'
