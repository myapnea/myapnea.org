!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=Edge,chrome=1", http: { equiv: "X-UA-Compatible" } }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no" }
    = render "layouts/meta/general"
    = render "layouts/meta/facebook"
    = render "layouts/meta/google"
    -# Don't cache any pages
    %meta{ name: "turbolinks-cache-control", content: "no-cache" }
    %title= [@title, "MyApnea"].compact.join(" - ").html_safe
    = favicon_link_tag
    = auto_discovery_link_tag(:rss, "#{ENV["website_url"]}/blog.atom")
    = csrf_meta_tags
    = render "layouts/fathom_analytics" if Rails.env.production?
    = stylesheet_link_tag "application", media: "all", data: { turbolinks_track: "reload" }
    = javascript_include_tag "application", data: { turbolinks_track: "reload" }
    = javascript_tag "var root_url=\"#{request.script_name + "/"}\";"
  - @random_theme ? render("themes/random") : render("themes/theme") unless @theme
  %body#top.full-page.theme-bg{ class: "theme-#{@theme.presence || "default"}-bg", data: { theme: @theme } }
    = render "layouts/service_announcement", container: defined?(container) ? container : nil
    = render "layouts/flash_bar"
    = render "layouts/logo_bar", container: defined?(container) ? container : nil
    #top-menu.top-menu= render "layouts/menu"
    - if content_for?(:white_header)
      .white-header-container{ class: defined?(container) && container.present? ? container : "container" }
        %h1.white-title-uppercase.mb-0
          = yield :white_header
    - if content_for?(:header)
      .header-container{ class: content_for?(:tabs) || content_for?(:progress_bar) ? "header-container-no-border" : nil }
        %div{ class: defined?(container) && container.present? ? container : "container" }
          %h1.page-heading
            = yield :header
    = yield :header_append
    - if content_for?(:tabs)
      .header-tabs{ class: "#{"header-tabs-no-breadcrumbs" unless content_for?(:breadcrumbs)}" }
        %div{ class: defined?(container) && container.present? ? container : "container" }
          = yield :tabs
    = yield :progress_bar
    - if content_for?(:breadcrumbs)
      .breadcrumb-container
        %div{ class: defined?(container) && container.present? ? container : "container" }
          = yield :breadcrumbs
    .theme-custom-spacing
      .py-3
        .container.remove-last-margin= yield
    = yield :footer
    = render "layouts/footer"
