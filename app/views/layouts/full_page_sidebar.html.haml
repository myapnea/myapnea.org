!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=Edge,chrome=1", http: { equiv: "X-UA-Compatible" } }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no" }
    = render "layouts/meta/general"
    = render "layouts/meta/facebook"
    = render "layouts/meta/google"
    -# Don't cache any pages
    %meta{ name: "turbolinks-cache-control", content: "no-cache" }
    %title= [@title, "MyApnea"].compact.join(" - ")
    = favicon_link_tag
    = auto_discovery_link_tag(:rss, "#{ENV["website_url"]}/blog.atom")
    = csrf_meta_tags
    = render "layouts/fathom_analytics" if Rails.env.production?
    = stylesheet_link_tag "application", media: "all", data: { turbolinks_track: "reload" }
    = javascript_include_tag "application", data: { turbolinks_track: "reload" }
    = javascript_tag "var root_url=\"#{request.script_name + "/"}\";"
  %body#top.full-page.theme-bg{ class: "theme-#{@theme.presence || "default"}-bg", data: { theme: @theme } }
    = render "layouts/service_announcement", container: "container-fluid"
    = render "layouts/flash_bar"
    = render "layouts/logo_bar", container: "container-fluid"
    #top-menu.top-menu= render "layouts/menu", nocontainer: true
    - if content_for?(:white_header)
      .white-header-container.container-fluid
        %h1.white-title-uppercase.mb-0
          = yield :white_header
    - if content_for?(:header)
      .header-container{ class: content_for?(:tabs) || content_for?(:progress_bar) ? "header-container-no-border" : nil }
        .container-fluid
          %h1.page-heading
            = yield :header
    = yield :header_append
    - if content_for?(:tabs)
      .header-tabs{ class: "#{"header-tabs-no-breadcrumbs" unless content_for?(:breadcrumbs)}" }
        .container-fluid
          = yield :tabs
    = yield :progress_bar
    - if content_for?(:breadcrumbs)
      .breadcrumb-container
        .container-fluid
          .px-1= yield :breadcrumbs
    .row.no-gutters.flex-md-nowrap.theme-custom-spacing
      = render "sidebar/mini"
      = yield(:sidebar)
      %main.col.p-3.remove-last-margin{ role: "main" }
        = yield
    = yield :footer
    = render "layouts/footer", container: "container-fluid"
